{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://eleanorproject.org/schemas/critic_bundle.schema.json",
  "title": "Critic Bundle",
  "description": "Schema for a critic's evaluation output",
  "type": "object",
  "required": ["critic", "verdict", "confidence", "justification"],
  "properties": {
    "critic": {
      "type": "string",
      "description": "Name of the critic that produced this evaluation",
      "minLength": 1
    },
    "verdict": {
      "type": "string",
      "description": "The critic's decision verdict",
      "enum": ["ALLOW", "DENY", "REVIEW", "ERROR"]
    },
    "confidence": {
      "type": "number",
      "description": "Confidence level of the verdict",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "justification": {
      "type": "string",
      "description": "Explanation for the verdict",
      "minLength": 1
    },
    "weight": {
      "type": "number",
      "description": "Weight assigned to this critic in aggregation",
      "minimum": 0.0
    },
    "priority": {
      "type": ["string", "null"],
      "description": "Priority level (e.g., 'override' for veto power)",
      "enum": ["override", null]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of evaluation",
      "format": "date-time"
    }
  }
}
